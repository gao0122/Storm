                                    android:layout_height="440dp"
                                    android:layout_gravity="right"
                                    android:layout_marginLeft="10dp"
                                    android:background="#ffffff"
                                    android:listSelector="#e4e9ef"
                                    android:touchscreenBlocksFocus="false" />

                            </LinearLayout>


                        </LinearLayout>
                    </ScrollView>

                    <LinearLayout
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="17dp"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ListView
                            android:id="@+id/listView_ed_chef_manager"
                            android:layout_width="194dp"
                            android:layout_height="284dp"
                            android:background="#ffffff"
                            android:touchscreenBlocksFocus="false" />

                        <Button
                            android:id="@+id/button_confirm_allocateChef"
                            android:layout_width="200dp"
                            android:layout_height="70dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="8dp"
                            android:background="#ff7473"
                            android:gravity="center"
                            android:text="Confirm"
                            android:textColor="#ffffff"
                            android:textSize="30sp" />

                        <Button
                            android:id="@+id/button_reset_allocateChef"
                            android:layout_width="200dp"
                            android:layout_height="70dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="8dp"
                            android:background="#ff7473"
                            android:gravity="center"
                            android:text="Reset"
                            android:textColor="#ffffff"
                            android:textSize="30sp" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/SetDiscount"
                    android:layout_width="match_parent"
                    android:layout_height="525dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="230dp"
                        android:layout_gravity="center"
                        android:background="#47b8e0"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                            xmlns:card_view="http://schemas.android.com/apk/res-auto"
                            android:layout_width="250dp"
                            android:layout_height="210dp"
                            android:layout_marginRight="10dp"
                            android:orientation="vertical"
                            card_view:cardBackgroundColor="@color/cardview_light_background"
                            card_view:cardCornerRadius="5dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="210dp"
                                android:orientation="vertical">

