                                                android:id="@+id/textView_edit_price"
                                                android:layout_width="41dp"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center"
                                                android:text="￥"
                                                android:textAlignment="textEnd"
                                                android:textColor="#121212"
