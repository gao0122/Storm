<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.storm.storm.ActivityComment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:background="#47b8e0"
        android:orientation="vertical">

        <Space
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:id="@+id/textView_comments_customer"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:text="COMMENTS"
            android:textColor="#ffffff"
            android:textSize="80sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:background="#47b8e0"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="740dp"
            android:layout_height="120dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="700dp"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:paddingLeft="40dp"
                android:weightSum="1">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="Date: "
                    android:textColor="#ffffff"
                    android:textSize="40dp" />

                <TextView
                    android:id="@+id/textView_dateDisplay_comments_customer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.12"
                    android:textColor="#ffffff"
                    android:textSize="40sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="700dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingLeft="40dp"
                android:weightSum="1">

                <TextView
                    android:id="@+id/textView_comments_name"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="Name: "
                    android:textColor="#ffffff"
                    android:textSize="40dp" />

                <TextView
                    android:id="@+id/textView_nameDisplay_comments_customer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.12"
                    android:text="Darren"
                    android:textColor="#ffffff"
                    android:textSize="40sp" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/textView_logo_comments"
            android:layout_width="584dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#ffffff"
            android:textSize="35sp"
            android:textStyle="bold|italic" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:background="#47b8e0"
        android:orientation="vertical"
        android:weightSum="1">

        <Spinner
            android:id="@+id/spinner_commentType"
            android:layout_width="138dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|left"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="40dp"
            android:layout_weight="0.83"
            android:background="@color/accent_material_light"
            android:entries="@color/accent_material_light"
            android:spinnerMode="dropdown" />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="1240dp"
            android:layout_height="194dp"
            android:layout_gravity="center"
            android:layout_marginBottom="1dp"
            android:layout_weight="0.41"
            android:background="#ffffff"
            android:ems="10"
            android:gravity="top"
            android:hint="Your suggestion will help us with a better future :)"
            android:inputType="textMultiLine"
            android:textColor="#111"
            android:textSize="40dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#47b8e0"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="1">

        <Button
            android:id="@+id/button_submit"
            android:layout_width="wrap_content"
            android:layout_height="77dp"
            android:layout_marginRight="2dp"
            android:layout_weight="0.06"
            android:background="@color/design_textinput_error_color_dark"
            android:nestedScrollingEnabled="false"
            android:text="Submit"
            android:textColor="#ffffff"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_back"
            android:layout_width="194dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:layout_marginLeft="2dp"
            android:background="#ff7473"
            android:text="Back"
            android:textColor="#ffffff"
            android:textSize="30sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>
